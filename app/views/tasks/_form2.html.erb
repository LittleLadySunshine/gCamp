<%= form_for(@task, html: {class: "form-horizontal"}) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %>
        prohibited this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <div class= "col-md-2"
      <%= f.label :description %>
    </div>
    <%= f.text_field :description, class: "col-md-4" %>
  </div>

  <div class="field form-group">
    <div class= "col-md-2"
      <%= f.label :due_date %>
    </div>
    <%= f.date_field :due_date, class: "col-md-2" %>
  </div>

 <div class="form-group">
    <div class= "col-md-2">
      <%= f.check_box(:complete) %>
      <%= f.label(:complete) %>
    </div>
  </div>


  <div class="actions form-group">
    <%= f.submit class: "btn btn-primary col-md-1.5" %>
  </div>


<% end %>
