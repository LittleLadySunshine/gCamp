<div class="col-md-3">
  <h1>Tasks</h1>
</div>

<div class= "container_buttons pull-right">
    <%= link_to_unless_current 'All Tasks', project_tasks_path(all_tasks: 'All tasks')%> |
    <%= link_to_if(@boo, 'Incomplete Tasks', project_tasks_path(incomplete: "Incomplete"))%> |
    <%= link_to 'Create Task', new_project_task_path, class: "btn btn-info" %>
</div>


<table class="table">


  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>
        <td><%= task.due_date %></td>
      <td>
<div class= "container_buttons pull-right">
          <%= link_to 'Show', project_task_path(@project, task), class: "btn btn-success" %>
          <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>
          <%= link_to 'Destroy', project_task_path(@project, task),
            method: :delete, data: { confirm: 'Are you sure?' },
            :class => "btn btn-danger " %>

        </td>
      </tr>
</div>
    <% end %>
  </tbody>
</table>
