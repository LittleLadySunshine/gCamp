<div class="col-md-3">
  <h1>Tasks</h1>
</div>

<div class= "container_buttons pull-right">
    <%= link_to_unless_current 'All Tasks', tasks_path(all_tasks: 'All tasks')%> |
    <%= link_to_if(@boo, 'Incomplete Tasks', tasks_path(incomplete: "Incomplete"))%> |
    <%= link_to 'Create Task', new_task_path, class: "btn btn-info" %>
</div>


<table class="table">


  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>
        <td><%= task.due_date %></td>
      <td>
          <%= link_to 'Show', task, class: "btn btn-success pull-right" %>
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info pull-right" %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger pull-right" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
