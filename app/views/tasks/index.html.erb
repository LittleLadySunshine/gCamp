
  <h1>Tasks
    <%= link_to 'Create Task', new_task_path, class: "btn btn-info pull-right bt" %>
  </h1><hr>

<table class = "table">


  <thead>
    <tr>
      <th>Description</th>
       <th><colspan="3"> <col style="width:70%"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>

  <td>
    <div class= "btn-toolbar pull-right">
      <%= link_to 'Show', task, class: "btn btn-success bt" %>
      <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info bt" %>
      <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger bt" %>
    </td>
      </tr>
    </div>
    <% end %>
  </tbody>
</table>
