<div class="page-header">
  <div class= "container_buttons pull-right">
    <%= link_to_unless_current 'All Tasks', project_tasks_path(all_tasks: 'All tasks')%> |
    <%= link_to_if(@boo, 'Incomplete Tasks', project_tasks_path(incomplete: "Incomplete"))%> |
    <%= link_to 'Create Task', new_project_task_path, class: "btn btn-info" %>
  </div>


  <h1>Tasks</h1>
</div>

<table class="table">

  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.description, project_task_path(@project, task)  %></td>
      <% if task.complete.to_s == "true" %>
      <td><span class="glyphicon glyphicon-ok"></span></td>
      <% else %>
      <td><span class='glyphicon glyphicon-minus'></span></td>
      <% end %>

      <td><%= task.due_date ? task.due_date.to_formatted_s(:long) : task.due_date %></td>
      <td class="text-right">
        <%= link_to 'Show', project_task_path(@project, task), class: 'btn btn-success' %>
        <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>
        <%= link_to '', project_task_path(@project, task),
        method: :delete,
        data: { confirm: 'Are you sure?' },
        class: 'glyphicon glyphicon-remove red' %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
