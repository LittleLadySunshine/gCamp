
  <h1>Tasks
    <%= link_to 'Create Task', new_task_path, class: "btn btn-info pull-right bt" %>
  </h1><hr>

<table class="table">

  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>
        <td><%= task.due_date %></td>
        <td class="btn-toolbar pull-right">
          <%= link_to 'Show', task, class: "btn btn-success" %>
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
