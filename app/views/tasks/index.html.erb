<div class="page-header">
  <h1>Tasks
    <button type="button" class="btn btn-info pull-right"><%= link_to 'New Task', new_task_path %></button>
  </h1>
</div>


<div class="page-header">
  <h4>Description</h4>
</div>


<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>

        <td><button type="button" class="btn btn-success pull-right"><%= link_to 'Show', task %></button></td>
        <td><button type="button" class="btn btn-info pull-right"><%= link_to 'Edit', edit_task_path(task) %></button></td>
        <td><button type="button" class="btn btn-danger pull-right"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
