<div class="container">
  <div class="page-header">
    <h1>
      <%= title %>
    </h1>
  </div>
  <%= render "shared/errors", source: @project %>
  <%= form_for @project, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="form-group">
      <%= f.label :name, :class => "col-md-1 control-label editform" %>
      <div class="col-md-4">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
    <%= f.submit "#{button}", :class => "btn btn-primary col-md-offset-1" %>
  <% end %>
</div>
