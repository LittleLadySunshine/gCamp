<!DOCTYPE html>
<html>
<head>
  <title>Gcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
<div class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <%= link_to "gCamp", projects_path, class: "navbar-brand" %>

  <ul class="nav navbar-nav">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
         My Projects
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu" role="menu">
        <% @projects.each do |project| %>
        <li> <%= link_to project.name %></li>
        <% end %>
        <li class="divider"></li>
        <li><%= link_to "New Project", new_project_path %></li>
      </ul>
    </li>
  </ul>

    <ul class= "nav navbar-nav navbar-right">
      <li><%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user) %></li>
      <li><%= link_to "Sign Out", signout_path %></li>
    </ul>
    </div>
  </div>
</div>

<div class= "container">
  <% if notice %>
    <div class= "container alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>
  <%= yield %>
</div>

<footer class="container">

    <div class="address">
      <&copy; Denise McCoy 2014><br>
        <a href="mailto:#">Denise.McCoy@gmail.com</a>
    </div>
    <%=  link_to_unless_current "About", about_path %> |
    <%=  link_to_unless_current "Terms", terms_path %> |
    <%=  link_to_unless_current "FAQS", faqs_path %> |
    <%=  link_to_unless_current "Users", users_path %> |
    <%=  link_to_unless_current "Projects", projects_path %>

  </div>
</footer>


</body>
</html>
