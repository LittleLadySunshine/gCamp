<div class="page-header">
  <h1>
    <%= "#{@project.name}: Manage Members" %>
  </h1>
</div>

<div class="row">
  <ol class="breadcrumb">
    <li>
      <%= link_to "Projects", projects_path %>
    </li>
    <li>
      <%= link_to "#{@project.name}", project_path(@project) %>
    </li>
    <li class="active">
      Memberships
    </li>
  </ol>
</div>

  <div class="row">
  <div  class="col-sm-5 alert alert-danger">
    <h5><%= pluralize(@membership.errors.count, "error") %>
        cd ..
        prohibited from this form being saved</h5>
    <ul>
    <% @membership.errors.full_messages.each do |message| %>
    <li><%= message%></li>
    <% end %>
  </ul>
  </div>
</div>


<div class="row">
  <div class="well col-md-5">
    <%= form_for [@project, @membership], :html => {:class => 'form-inline'} do |f| %>
    <%= f.collection_select :user_id, User.all, :id, :full_name,
     { include_blank: "Please select a user... "}, {class: "form-control"} %>
    <%= f.select(:role, options_for_select(["Member","Owner"]),{ },
      {class: "form-control"}) %>
    <%= f.submit "Add New Member", :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <table class="table-condensed">
    <% @project.users.order(:first_name).each do |user| %>
    <% user.memberships.where(project_id: @project.id).each do |membership| %>
    <%= form_for [@project, membership], :html => {:class => 'form-inline'} do |f| %>
    <tr>
      <td>
        <%= link_to membership.user.full_name, user_path(membership.user_id) %>
      </td>
      <td>
        <%= f.select(:role, options_for_select(["Member","Owner"]),{ }, {class: "form-control"}) %>
      </td>
      <td>
        <%= f.submit "Update", :class => "btn btn-primary" %>
      </td>
      <td class="delete">
        <%= link_to content_tag(:span, " ", class: 'glyphicon glyphicon-remove'),
          project_membership_path(@project, membership),
        method: :delete, :data => {:confirm => "Are you sure?"} %>
      </td>
    </tr>
    <% end %>
    <% end %>
    <% end %>
  </table>
</div>
