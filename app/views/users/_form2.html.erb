<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
<% if @user.errors.present? %>
          <ul>
            <div class= "alert alert-danger"
            <% @user.errors.full_messages.each do |message| %>
            <p style="color:red"><%= message %></p>
            <% end %>
          </div>
          </ul>
        <% end %>


<div class= "form-group">
  <div class="col-sm-12">
      <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :first_name, type: "text", class: "form-control" %>
    </div>
  </div>
</div>

<div class= "form-group">
  <div class="col-sm-12">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
   <div class="col-sm-5">
     <%= f.text_field :last_name, type: "text", class: "form-control" %>
   </div>
  </div>
</div>

<div class= "form-group">
  <div class="col-sm-12">
    <%= f.label :email, class: "col-sm-2 control-label" %>
   <div class="col-sm-5">
     <%= f.email_field :email, type: "email", class: "form-control" %>
   </div>
  </div>
</div>

<div class= "form-group">
  <div class="col-sm-12">
    <%= f.label :password, class: "col-sm-2 control-label" %>
   <div class="col-sm-5">
     <%= f.password_field :password, type: "password", class: "form-control" %>
   </div>
 </div>
</div>

<div class="form-group">
  <div class="col-sm-12">
      <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, type: "password", class: "form-control" %>
      </div>
    </div>
</div>

<div class="form-group">
  <div class="form-input">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
</div>
  <% end %>
