<%= form_for @user, html: {class: "form-horizontal"} do |f| %>

<% if @user.errors.present? %>
        <div class= "col-sm-6 alert alert-danger">
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li style="color:red"><%= message %></li>
                    <% end %>
            </ul>
        </div>
<% end %>

<div class= "layout">
  <div class= "form-group">
    <div class="col-sm-12">
        <%= f.label :first_name, class: "col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :first_name, type: "text", class: "form-control" %>
        </div>
    </div>
  </div>


<div class= "form-group">
  <div class="col-sm-12">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
   <div class="col-sm-5">
     <%= f.text_field :last_name, type: "text", class: "form-control" %>
   </div>
  </div>
</div>

<div class= "form-group">
  <div class="col-sm-12">
    <%= f.label :email, class: "col-sm-2 control-label" %>
   <div class="col-sm-5">
     <%= f.email_field :email, type: "email", class: "form-control" %>
   </div>
  </div>
</div>

<div class= "form-group">
  <div class="col-sm-12">
    <%= f.label :password, class: "col-sm-2 control-label" %>
   <div class="col-sm-5">
     <%= f.password_field :password, type: "password", class: "form-control" %>
   </div>
 </div>
</div>

<div class="form-group">
  <div class="col-sm-12">
      <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, type: "password", class: "form-control" %>
      </div>
    </div>
</div>

<div class="form-group">
  <div class="form-input">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
</div>
</div>
  <% end %>
