<div class="row">
  <div class="col-md-4">
    <h1>
      <%= @users.full_name %>
    </h1>
  </div>
  <br>
  <br>

  <% if @users.id == current_user.id || current_user.admin == true %>
  <div class="col-md-4 col-md-offset-4 text-right">
    <%= link_to 'Edit', edit_user_path, class: 'btn btn-primary text-right' %>
  </div>
  <% end %>
</div>
<br>

<dl class="dl-horizontal">
  <dt><strong>First Name:</strong></dt>
  <dd><%= @user.first_name %></dd>
  <br>
  <dt><strong>Last Name:</strong></dt>
  <dd><%= @user.last_name %></dd>
  <br>
  <dt><strong>Email:</strong></dt>
  <dd><a href="mailto:#"><%= @user.email %></a></dd>

  <dt><strong>Admin:</strong></dt>
  <dd><%= @user.admin %></dd>
  <% if @user.id == current_user.id || @other_users.include?(@user.id) %>

  <dt><strong>Email:</strong></dt>
  <dd><%= mail_to @user.email %></dd>
  <% if @user.pivotal_token.present? %>

  <dt><strong>Pivotal Tracker Token:</strong></dt>
  <dd><%= @user.pivotal_token.gsub(/(?<=^....)(.*)/, '******************') %></dd>
  <% end %>
</dl>
<% end %>
